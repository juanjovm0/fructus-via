<style>
.header-info-bar {
  border-bottom: 1px solid rgba(var(--color-foreground), 0.08);
  padding: 8px 0;
}

.header-info-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
}

.header-store-info, .header-shipping-info {
  display: flex;
  align-items: center;
  padding: 8px 12px;
  border-radius: 6px;
  background: rgba(var(--color-foreground), 0.02);
}

.store-info-content, .shipping-info-content {
  display: flex;
  align-items: center;
  gap: 8px;
}

.store-icon, .shipping-icon {
  font-size: 16px;
  opacity: 0.8;
}

.store-text, .shipping-text {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.store-label, .shipping-label {
  font-size: 11px;
  color: rgba(var(--color-foreground), 0.6);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.store-name {
  font-size: 13px;
  font-weight: 600;
  color: rgb(var(--color-foreground));
  line-height: 1.2;
}

.postal-input {
  border: 1px solid rgba(var(--color-foreground), 0.2);
  border-radius: 4px;
  padding: 6px 10px;
  font-size: 12px;
  width: 90px;
  text-align: center;
  background: rgb(var(--color-background));
  color: rgb(var(--color-foreground));
  transition: all 0.2s ease;
}

.postal-input:focus {
  outline: none;
  border-color: rgb(var(--color-button));
  box-shadow: 0 0 0 2px rgba(var(--color-button), 0.1);
}

.postal-input::placeholder {
  color: rgba(var(--color-foreground), 0.5);
  font-size: 11px;
}

@media (max-width: 768px) {
  .header-info-content {
    flex-direction: column;
    gap: 10px;
  }
  
  .header-store-info, .header-shipping-info {
    width: 100%;
    justify-content: center;
    padding: 6px 8px;
  }
  
  .postal-input {
    width: 80px;
    font-size: 11px;
    padding: 5px 8px;
  }
}

@media (max-width: 480px) {
  .header-info-bar {
    padding: 6px 0;
  }
  
  .store-info-content, .shipping-info-content {
    gap: 6px;
  }
  
  .store-icon, .shipping-icon {
    font-size: 14px;
  }
  
  .store-label, .shipping-label {
    font-size: 10px;
  }
  
  .store-name {
    font-size: 12px;
  }
  
  .postal-input {
    width: 70px;
    font-size: 10px;
    padding: 4px 6px;
  }
}

/* Animaciones para cambios de sucursal */
.store-name {
  transition: all 0.3s ease;
}

.store-name.updating {
  opacity: 0.5;
  transform: scale(0.95);
}

/* Indicador de carga */
.store-name.loading::after {
  content: "...";
  animation: dots 1.5s infinite;
}

@keyframes dots {
  0%, 20% { opacity: 0; }
  50% { opacity: 1; }
  100% { opacity: 0; }
}
</style>

